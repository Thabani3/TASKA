@model IEnumerable<TaskA.Models.Client>

@{
    ViewBag.Title = "Index";
}


<br />
<br />
<br />
<br />
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="col-md-12">
    <div class="box box-primary">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><b style="color:#dd4b39; text-transform:capitalize;margin-left:43%;"><i class="fa fa-user-plus"></i>Register New Account Here</b></h3>
            </div>
            <div class="panel-body">

                <div class="container col-lg-6">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User_IDNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Profile_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Profile_Surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Profile_Cellnumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Profile_Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Profile_Email)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User_IDNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Profile_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Profile_Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Profile_Cellnumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Profile_Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Profile_Email)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Profile_ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Profile_ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Profile_ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>